<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_Drivers"
    app:cardCornerRadius="4dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:text="Driver :"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_drivers_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.259" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Boat :"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_boat_name2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/txt_destination_name"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_account_circle_white_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_drivers_name"
            android:layout_width="176dp"
            android:layout_height="27dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Drivers #1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_destination_name"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


        <TextView
            android:id="@+id/txt_boat_name2"
            android:layout_width="176dp"
            android:layout_height="27dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Boat #1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_drivers_phone"
            app:layout_constraintEnd_toStartOf="@+id/txt_destination_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_drivers_name">

        </TextView>

        <ImageView
            android:id="@+id/image_to"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_driver_destination2"
            app:layout_constraintTop_toBottomOf="@+id/txt_boat_name2"
            app:srcCompat="@drawable/right_arrow" />

        <TextView
            android:id="@+id/txt_drivers_departure2"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="Departure"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/image_to"
            app:layout_constraintTop_toBottomOf="@+id/txt_boat_name2">

        </TextView>

        <TextView
            android:id="@+id/txt_driver_destination2"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="Destination"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rtb_drivers"
            app:layout_constraintTop_toBottomOf="@+id/txt_boat_name2">

        </TextView>

        <RatingBar
            android:id="@+id/rtb_drivers"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:max="5"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_destination_name"
            tools:visibility="invisible" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>