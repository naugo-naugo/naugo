<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/Swipe_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat"
        android:text="Swipe Calendar"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible">

    </TextView>

    <Button
        android:id="@+id/showdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btncontact"
        android:text="Show Booking Details"
        android:visibility="gone"
        tools:visibility="gone" />

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorCalender"
        android:backgroundTint="@color/naugoTheme"
        android:visibility="visible"
        app:textColorNormal="#FFFF"
        app:textColorSelected="#FFFF"
        tools:visibility="visible">

    </devs.mulham.horizontalcalendar.HorizontalCalendarView>

    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="Book This Boat"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:visibility="invisible">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_time_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvcontactdriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Contact Driver"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvindonesianonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(Indonesian Only)"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/callDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btncontact"
                android:fontFamily="@font/montserrat"
                android:text="Call Driver (ID)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_drivers_phone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/smsDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnbooking"
                android:fontFamily="@font/montserrat"
                android:text="SMS Driver (ID)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_drivers_phone"
                tools:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvcontactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Contact Us"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvenglishonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(English)"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/callNaugoWA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btncontact"
                android:fontFamily="@font/montserrat"
                android:text="Whatsapp (EN)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_drivers_phone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/callNaugoFB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btncontact"
                android:fontFamily="@font/montserrat"
                android:text="FB Mesengger (EN)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_drivers_phone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/callNaugoSkype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btncontact"
                android:fontFamily="@font/montserrat"
                android:text="Skype (EN)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_drivers_phone"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>